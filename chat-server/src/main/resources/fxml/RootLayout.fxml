<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatv2.server.gui.RootLayoutController"
            styleClass="root-pane">

    <!-- Left Sidebar for Navigation -->
    <left>
        <VBox styleClass="sidebar" spacing="10" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>

            <!-- App Title -->
            <Label text="ChatV2 Admin" styleClass="app-title">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
                <VBox.margin>
                    <Insets bottom="30"/>
                </VBox.margin>
            </Label>

            <!-- Navigation Buttons -->
            <Button fx:id="dashboardButton" text="Dashboard" maxWidth="Infinity"
                    onAction="#handleDashboard" styleClass="nav-button"/>

            <Button fx:id="userManagementButton" text="Users" maxWidth="Infinity"
                    onAction="#handleUserManagement" styleClass="nav-button"/>

            <Button fx:id="chatManagementButton" text="Chats" maxWidth="Infinity"
                    onAction="#handleChatManagement" styleClass="nav-button"/>

            <Button fx:id="logViewerButton" text="Logs" maxWidth="Infinity"
                    onAction="#handleLogViewer" styleClass="nav-button"/>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Footer -->
            <Label text="v1.0.0" styleClass="version-label"/>
        </VBox>
    </left>

    <!-- Center content area - filled by controllers -->
    <center>
        <!-- Content loaded dynamically -->
    </center>

</BorderPane>
