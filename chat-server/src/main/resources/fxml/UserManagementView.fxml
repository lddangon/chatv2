<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatv2.server.gui.controller.UserController"
            styleClass="user-management-pane">

    <!-- Top: Search Bar -->
    <top>
        <HBox styleClass="search-bar" spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <TextField fx:id="searchField" promptText="Search users by username..."
                     HBox.hgrow="ALWAYS" styleClass="search-field"/>

            <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"
                    styleClass="icon-button, refresh-button"/>
        </HBox>
    </top>

    <!-- Center: User Table -->
    <center>
        <TableView fx:id="userTable" styleClass="user-table">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="200"/>
                <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="250"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox styleClass="action-bar" spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <Button fx:id="addButton" text="Add User" onAction="#handleAddUser"
                    styleClass="action-button, add-button"/>

            <Button fx:id="editButton" text="Edit User" onAction="#handleEditUser"
                    styleClass="action-button, edit-button"/>

            <Button fx:id="deleteButton" text="Delete User" onAction="#handleDeleteUser"
                    styleClass="action-button, delete-button"/>
        </HBox>
    </bottom>

</BorderPane>
