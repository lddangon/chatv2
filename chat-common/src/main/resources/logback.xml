<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- ============================================ -->
    <!-- Консольный аппендер с цветным выводом       -->
    <!-- ============================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ============================================ -->
    <!-- Общий файл логов (все приложения)           -->
    <!-- ============================================ -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ============================================ -->
    <!-- Лог-файл для сервера                         -->
    <!-- (com.chatv2.server.* + com.chatv2.launcher.server.*) -->
    <!-- ============================================ -->
    <appender name="FILE_SERVER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/server.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/server.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.JaninoEventEvaluator">
                <!-- Логируем только пакеты сервера -->
                <expression>logger.startsWith("com.chatv2.server") || logger.startsWith("com.chatv2.launcher.server")</expression>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- ============================================ -->
    <!-- Лог-файл для клиента                         -->
    <!-- (com.chatv2.client.* + com.chatv2.launcher.client.*) -->
    <!-- ============================================ -->
    <appender name="FILE_CLIENT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/client.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/client.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.JaninoEventEvaluator">
                <!-- Логируем только пакеты клиента -->
                <expression>logger.startsWith("com.chatv2.client") || logger.startsWith("com.chatv2.launcher.client")</expression>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- ============================================ -->
    <!-- Лог-файл для модулей шифрования              -->
    <!-- (com.chatv2.encryption.*)                   -->
    <!-- ============================================ -->
    <appender name="FILE_ENCRYPTION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/encryption.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/encryption.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.JaninoEventEvaluator">
                <!-- Логируем только пакеты шифрования -->
                <expression>logger.startsWith("com.chatv2.encryption")</expression>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- ============================================ -->
    <!-- Настройка уровней логирования по пакетам    -->
    <!-- ============================================ -->
    
    <!-- Серверная часть - DEBUG для разработки -->
    <logger name="com.chatv2.server" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_SERVER"/>
    </logger>
    
    <!-- Лаунчер сервера - DEBUG для разработки -->
    <logger name="com.chatv2.launcher.server" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_SERVER"/>
    </logger>
    
    <!-- Клиентская часть - DEBUG для разработки -->
    <logger name="com.chatv2.client" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_CLIENT"/>
    </logger>
    
    <!-- Лаунчер клиента - DEBUG для разработки -->
    <logger name="com.chatv2.launcher.client" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_CLIENT"/>
    </logger>
    
    <!-- Модули шифрования - INFO по умолчанию -->
    <logger name="com.chatv2.encryption" level="INFO" additivity="true">
        <appender-ref ref="FILE_ENCRYPTION"/>
    </logger>
    
    <!-- Общие компоненты - INFO -->
    <logger name="com.chatv2.common" level="INFO" additivity="true"/>

    <!-- ============================================ -->
    <!-- Корневой логгер                              -->
    <!-- ============================================ -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_ALL"/>
    </root>

</configuration>
